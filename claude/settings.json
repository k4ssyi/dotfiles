{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "API_TIMEOUT_MS": "600000"
  },
  "permissions": {
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf $HOME)",
      "Bash(rm -rf $HOME/*)",
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(git config *)",
      "Bash(git push --force *)",
      "Bash(git push * --force)",
      "Bash(git push * --force *)",
      "Bash(git push -f *)",
      "Bash(git push * -f)",
      "Bash(git push * -f *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -f*)",
      "Bash(brew install *)",
      "Bash(chmod 777 *)",
      "Bash(chmod -R 777 *)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(curl * | bash)",
      "Bash(curl * | sh)",
      "Bash(wget * | bash)",
      "Bash(wget * | sh)",
      "Bash(bash <(curl *))",
      "Bash(bash <(wget *))",
      "Bash(sh <(curl *))",
      "Bash(sh <(wget *))",
      "Bash(gh repo delete *)",
      "Bash(launchctl *)",
      "Bash(diskutil erase*)",
      "Bash(> /dev/sd*)",
      "Bash(> /dev/disk*)"
    ],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash|Write|Edit|Task|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "input=$(cat); tool_name=$(jq -r '.tool_name' <<< \"$input\"); if command -v osascript >/dev/null 2>&1; then osascript -e \"display notification \\\"$tool_name completed\\\" with title \\\"Claude Code\\\"\"; elif command -v notify-send >/dev/null 2>&1; then notify-send 'Claude Code' \"$tool_name completed\"; fi"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "input=$(cat); filepath=$(jq -r '.tool_input.file_path // empty' <<< \"$input\"); if [ -n \"$filepath\" ] && [ -f \"$filepath\" ]; then case \"$filepath\" in *.sh|*.bash) if command -v shellcheck >/dev/null 2>&1; then result=$(shellcheck -f gcc \"$filepath\" 2>&1); if [ -n \"$result\" ]; then jq -n --arg ctx \"shellcheck warnings:\\n$(echo \"$result\" | head -20)\" '{hookSpecificOutput:{hookEventName:\"PostToolUse\",additionalContext:$ctx}}'; fi; fi ;; esac; fi; exit 0"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 ~/.claude/scripts/context-monitor.py"
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true
  },
  "outputStyle": "explanatory",
  "language": "Japanese",
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": false
}
