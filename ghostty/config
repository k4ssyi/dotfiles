# Ghostty Configuration

# ---------------------------------------------------------
# Theme
# ---------------------------------------------------------

# macOSアピアランス連動: ライト/ダークモード自動切替
theme = "light:Catppuccin Latte,dark:Catppuccin Mocha"

# ---------------------------------------------------------
# Font
# ---------------------------------------------------------

font-family = Hack Nerd Font
font-size = 13

# macOS: Core Textによるフォントストロークの太字化
font-thicken = true

# ---------------------------------------------------------
# Window
# ---------------------------------------------------------

window-theme = dark
background-opacity = 0.90
background-blur-radius = 20

# パディング（テキストとウィンドウ端の余白）
window-padding-x = 12
window-padding-y = 8
window-padding-balance = true

# ウィンドウの状態（位置・サイズ）を記憶
window-save-state = always

# リサイズオーバーレイを非表示
resize-overlay = never

# ---------------------------------------------------------
# Cursor
# ---------------------------------------------------------

cursor-style = bar

# ---------------------------------------------------------
# Scrollback
# ---------------------------------------------------------

scrollback-limit = 50000

# ---------------------------------------------------------
# macOS Specific
# ---------------------------------------------------------

macos-option-as-alt = true
macos-titlebar-proxy-icon = hidden

# ウィンドウ閉じる時に確認（誤操作防止）
confirm-close-surface = always

# ---------------------------------------------------------
# Shell Integration
# ---------------------------------------------------------

# シェルを自動検出（zsh/bash/fish/elvish対応）
shell-integration = detect

# cursor: プロンプトでalt+clickカーソル移動
# sudo:   sudo実行時にterminfo情報を保持
# title:  実行中コマンド・ディレクトリでウィンドウタイトル自動更新
shell-integration-features = cursor,sudo,title

# ---------------------------------------------------------
# Keybindings
# ---------------------------------------------------------

# プロンプトナビゲーション（shell integration連携）
# 長いログ出力後でも前後のプロンプト位置へ一発ジャンプ
keybind = cmd+shift+up=jump_to_prompt:-1
keybind = cmd+shift+down=jump_to_prompt:1
